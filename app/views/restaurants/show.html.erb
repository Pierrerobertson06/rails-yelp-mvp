<h1>Title: <%= @restaurant.name %></h1>
<h2>Category: <%= @restaurant.category %></h2>
<h2>Address: <%= @restaurant.address %></h2>
<%= link_to "Go to restaurant list!", restaurants_path %>

<p><strong>Reviews</strong></p>
<p><%= link_to "Add new review", new_restaurant_review_path(@restaurant)%></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
    <li class="list-group-item"><%= review.rating %></li>
  <% end %>
</ul>

<br>
